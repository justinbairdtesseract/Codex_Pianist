#usda 1.0
(
    defaultPrim = "World"
    upAxis = "Z"
    metersPerUnit = 1
)

def Xform "World"
{
    def PhysicsScene "physicsScene"
    {
        float3 physics:gravityDirection = (0, 0, -1)
        float physics:gravityMagnitude = 9.81
    }

    def Cube "Ground" (
        prepend apiSchemas = ["PhysicsCollisionAPI"]
    )
    {
        double3 xformOp:translate = (0, 0, -0.05)
        double3 xformOp:scale = (4, 4, 0.05)
        uniform token[] xformOpOrder = ["xformOp:translate", "xformOp:scale"]
        color3f[] primvars:displayColor = [(0.14, 0.14, 0.14)]
    }

    def Xform "PianoKeyboard" (
        prepend references = @../assets/keyboard/robopianist_keyboard.usda@
    )
    {
        double3 xformOp:translate = (0.676093, -0.087234, 0.988099)
        double3 xformOp:rotateXYZ = (0, 0, 180)
        uniform token[] xformOpOrder = ["xformOp:translate", "xformOp:rotateXYZ"]
    }

    def Xform "PianistRobot" (
        prepend references = @../pianist_robot.usda@
    )
    {
        double3 xformOp:translate = (0.0, 0.0, 0.74)
        double3 xformOp:rotateXYZ = (0, 0, 0)
        uniform token[] xformOpOrder = ["xformOp:translate", "xformOp:rotateXYZ"]
    }
}
